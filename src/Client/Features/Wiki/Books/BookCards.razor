@using Contracts

<div class="container-fluid ps-0 pe-0">
    <div class="row">
        @foreach (var book in Books ?? [])
        {
            <div class="col-12 col-md-4 col-lg-3 mb-3">
                <div class="card shadow h-100">
                    <img src="@(book.ImageUrl ?? "static/Book.jpg")" alt="книга" class="card-img-top" />
                    <div class="position-absolute top-0 end-0 m-1 text-center rounded-circle bg-light shadow-sm" style="width: 1.5rem; height: 1.5rem">
                        @if (book.IsPublic)
                        {
                            <span class="bi bi-star-fill text-warning" title="Публичная книга"></span>
                        }
                        else
                        {
                            <span class="bi bi-star"></span>
                        }
                    </div>
                    <div class="card-body vstack">
                        <h5 class="card-title">@book.Name</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">@book.Author</h6>
                        <p class="card-text">@book.Description</p>
                        <a href="wiki/books/read/@book.UrlName.Value" class="btn btn-info mt-auto">
                            <i class="bi bi-book"></i>
                            Читать
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    
    [Parameter, EditorRequired]
    public BookModel[]? Books { get; set; }
}