@using Contracts

<ul class="list-group list-group-numbered">
    @foreach (var book in Books ?? [])
    {
        <li class="list-group-item d-flex">
            <a class="text-truncate flex-fill text-decoration-none text-link mx-2" href="wiki/books/read/@book.UrlName.Value">@book.Name</a>
            <BookPublicityIcon IsPublic="@book.IsPublic" />
        </li>
    }
</ul>

@code {

    [Parameter, EditorRequired]
    public BookModel[]? Books { get; set; }
}