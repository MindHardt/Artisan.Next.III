@inherits LayoutComponentBase

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2">
            <nav class="d-flex flex-xl-column flex-row gap-2 pb-2 flex-wrap">
                <NavLink href="/wiki/" class="btn btn-outline-dark" ActiveClass="btn-dark text-light" Match="NavLinkMatch.All">
                    <i class="bi bi-house"></i>
                    Главная
                </NavLink>
                <NavLink href="/wiki/books" class="btn btn-outline-dark" ActiveClass="btn-dark text-light">
                    <i class="bi bi-book"></i>
